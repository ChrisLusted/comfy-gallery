<% content_for :head do %>
  <%= stylesheet_link_tag "sofa_gallery/sofa_gallery_thumbnails.css" %>
  <%= javascript_include_tag "sofa_gallery/sofa_gallery_thumbnails.js" %>
<% end %>

<% if @gallery %>
  
  <ul id="<%= dom_id(@gallery)%>" class="gallery">
    <% @gallery.photos.each do |photo| %>
      <li id="<%= dom_id(photo) %>">
        <div class="photo">
          <%= link_to photo.image.url(:original), :rel => 'prettyPhoto', :title => photo.description do %>
            <%= image_tag(photo.image.url(:thumb), :alt => photo.description) %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  Gallery not found.
<% end %>